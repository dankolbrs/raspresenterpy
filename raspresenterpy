#! /usr/bin/python

# source: http://stackoverflow.com/questions/6513311/pyqt-web-browser-focus-on-the-webpage-without-a-mouse-click

"""
#include <QtGui>
#include <QtWebKit>
 
 
int main(int argc, char **argv){
  QApplication app(argc, argv);
  QWebView wv;
  QWebPage *page = wv.page();
  QWebSettings *settings = page->settings();
  settings->setAttribute(QWebSettings::JavascriptEnabled, true);
  settings->setAttribute(QWebSettings::PluginsEnabled, true);
  wv.load(QUrl("http://www.youtube.com"));
  wv.show();
  return app.exec();
}
"""

import sys, os, time, re
try:
    from PyQt4.QtCore import *
    from PyQt4.QtGui import *
    from PyQt4.QtWebKit import *
except ImportError:
    print "You need to install PythonQt in order to run this."
    sys.exit(1)

TIMER = 30

class raspresenterpy(QDialog):
    def __init__(self):
        QDialog.__init__(self)
        self.URLS = []
        self.url = ''
        
        self.readconf()
        
    def usage(self, errno = 1):
        print "Use: %s <raspresenterpy.conf>" % sys.argv[0]
        sys.exit(errno)

    def readconf(self):
        try:
            conf = sys.argv[1]
            conflines = open(conf).readlines()
        except IOError as e:
            print e.strerror
            self.usage(e.errno)
        except IndexError as e:
            print e
            self.usage()

        for line in conflines:
            if not re.search("^http", line):
                continue
            print "reading: %s" % line.rstrip()
            self.URLS.append(line.rstrip())

    def update(self):
        print "Updating to: %s" % self.url
        self.web.load(QUrl(self.url))

        
    def show(self):
        print "Staring thread"
        self.th = QtBrowser(parent = self)
        self.th.start()
        print "Connecting SIGNAL"
        self.connect(self.th,
                     SIGNAL("update"),
                     self.update)
        print "Starting app"
        #self.app = QApplication(sys.argv)
        self.web = QWebView()
        self.web.loadFinished.connect(self.web.setFocus)
        self.web.showFullScreen()
        QWebSettings.JavascriptEnabled = 1
        QWebSettings.PluginsEnabled = 1
        print "Connecting to %s" % self.url
        self.web.load(QUrl(self.url))
        #sys.exit(self.app.exec_())

        
        
class QtBrowser(QThread):
    def __init__(self, parent = None):
        print "Starting QtBrowser"
        QThread.__init__(self, parent = None)
        self.p = parent


    def run(self):
        while True:
            for url in self.p.URLS:
                print "Threading updating url to: %s" % url
                self.p.url = url
                self.emit(SIGNAL("update"))
                #self.th.web.load(QUrl(url))
                time.sleep(TIMER)

if __name__ == '__main__':
    try:
        app = QApplication(sys.argv)
        win = raspresenterpy()
        win.show()
        sys.exit(app.exec_())
    except KeyboardInterrupt:
        sys.exit(0)
